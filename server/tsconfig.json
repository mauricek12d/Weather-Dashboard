{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "module": "NodeNext", /* Use NodeNext for modern Node.js modules */
    "moduleResolution": "NodeNext", /* Resolve modules using Node.js-style resolution */

    /* Root and Output Directories */
    "rootDir": "src", /* Specify the root folder for source files */
    "outDir": "dist", /* Specify the output folder for compiled files */

    /* Emit */
    "noEmitOnError": true, /* Prevent emitting files if there are type-checking errors */

    /* Target Environment */
    "target": "ES2020", /* Target modern JavaScript (ES2020) */

    /* Additional Options */
    "resolveJsonModule": true, /* Allow importing JSON files */
    "allowSyntheticDefaultImports": true, /* Allow default imports */
    "strict": true /* Enable all strict type-checking options */
  },
  "include": ["src"], /* Include only the `src` directory */
  "exclude": ["node_modules", "dist"] /* Exclude unnecessary directories */
}
