{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020", /* Set the JavaScript version to ES2020 */
    "lib": ["DOM", "ES2020"], /* Include DOM and ES2020 libraries */

    /* Modules */
    "module": "ESNext", /* Use ESNext module syntax */
    "moduleResolution": "NodeNext", /* Resolve modules for Node.js/ESNext compatibility */

    /* JavaScript Support */
    "allowJs": true, /* Allow JavaScript files */
    "checkJs": true, /* Enable error checking for JavaScript files */

    /* Interop Constraints */
    "esModuleInterop": true, /* Compatibility for CommonJS modules */
    "allowSyntheticDefaultImports": true, /* Allow default imports */

    /* Output Settings */
    "strict": true, /* Enable all strict type-checking options */
    "forceConsistentCasingInFileNames": true, /* Enforce consistent casing in imports */

    /* Type Checking */
    "noUnusedLocals": true, /* Report errors for unused locals */
    "noUnusedParameters": true, /* Report errors for unused parameters */
    "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statements */
    "exactOptionalPropertyTypes": true, /* Treat optional properties as written */
    "noImplicitReturns": true, /* Report errors for missing return statements */
    "noImplicitOverride": true, /* Ensure override members are marked */
    "useUnknownInCatchVariables": true, /* Use `unknown` for catch variables */

    /* Miscellaneous */
    "skipLibCheck": true, /* Skip type-checking in `node_modules` for better performance */
    "resolveJsonModule": true, /* Allow importing JSON files */
    "strictNullChecks": true /* Enable strict null checks */
  }
}

